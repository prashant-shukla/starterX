{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/components/ui/**",
    
    
    "src/components/admin/AdminClientDetail.tsx",
    "src/components/admin/AdminClientDetailFunctions.tsx",
    
    "src/components/**/__tests__/**"
  ]
}
